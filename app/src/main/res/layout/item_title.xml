<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="217dp"
    android:layout_height="match_parent"
    android:background="@drawable/back_title"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_classAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="教室编号 001"
        android:textColor="@color/text_gray"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/title_cardNum"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="number" />

    <ImageView
        android:id="@+id/title_sclIcon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="26dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic_not_found" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_schoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:textColor="@color/text_black"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="1"
                android:textColor="@color/text_black"
                android:textSize="52sp" />

            <TextView
                android:id="@+id/title_classAlias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="1"
                android:textColor="@color/text_gray"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:layout_marginRight="40dp"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/title_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="47dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/text_black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/title_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="47dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
