<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.activity.TeacherActivity">

    <include layout="@layout/item_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_back"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="1200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="79dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:background="@drawable/back_teacher"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/teacher_icon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="84dp"
                    android:layout_marginTop="61dp"
                    android:scaleType="centerCrop"
                    fresco:placeholderImage="@drawable/icon_head_teacher2"
                    fresco:roundAsCircle="true"
                    fresco:roundingBorderColor="#B5DD8F"
                    fresco:roundingBorderWidth="3dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="75dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teacher_courseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/teacher_teacherName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="教师"
                            android:textColor="@color/text_gray2"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="160dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="500dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/teacher_start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_black"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/teacher_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="30sp" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/teacher_seekbar"
                        android:layout_width="490dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:focusable="false"
                        android:max="100"
                        android:maxHeight="25dp"
                        android:minHeight="25dp"
                        android:progress="10"
                        android:progressDrawable="@drawable/progress_cyan"
                        android:secondaryProgress="100"
                        android:thumb="@drawable/icon_zhishi" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="75dp"
                    android:alpha="0.5"
                    android:scaleType="fitXY"
                    android:src="@drawable/back_ketang" />

                <!--                <com.youth.banner.Banner-->
                <!--                    android:id="@+id/teacher_Loop"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:layout_marginLeft="105dp"-->
                <!--                    android:layout_marginRight="105dp"-->
                <!--                    android:layout_marginTop="50dp"-->
                <!--                    app:banner_default_image="@drawable/teacher"-->
                <!--                    app:indicator_height="12dp"-->
                <!--                    app:indicator_margin="3dp"-->
                <!--                    app:indicator_width="12dp" />-->

                <com.zk.banner.Banner
                    android:id="@+id/teacher_Loop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="105dp"
                    app:indicator_height="15dp"
                    app:indicator_width="15dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/back_ketang" />

                <ImageView
                    android:layout_width="224dp"
                    android:layout_height="78dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_ketang2" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/teacher_back"
                android:layout_width="236dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="63dp"
                android:src="@drawable/teacher_backtomain" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_conStatus"
                android:layout_width="54dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:layout_marginTop="23dp"
                android:layout_marginRight="74dp"
                android:src="@drawable/lianwang" />


            <LinearLayout
                android:layout_width="418dp"
                android:layout_height="939dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gray_stroke_white_back"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="班级课程表"
                        android:textColor="@color/text_black"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/teacher_week2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textColor="#6CBA7D"
                        android:textSize="38sp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/teacher_listview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:fadingEdge="none"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/teacher_nextCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="37dp"
                    android:textColor="#F19292"
                    android:textSize="38sp" />

                <ImageView
                    android:id="@+id/teacher_qrcode"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="33dp"
                    android:text="扫 码 巡 课"
                    android:textColor="@color/text_gray2"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
