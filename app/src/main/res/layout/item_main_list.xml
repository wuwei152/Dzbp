<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        android:src="@drawable/pic_not_found" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/item_top"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:background="#E2E2E2" />

        <View
            android:id="@+id/item_qiu"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/green_solid_circle_back" />

        <View
            android:id="@+id/item_bot"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:background="#E2E2E2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="28dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="4"
                android:ellipsize="end"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_l2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/item_l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/item_l4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>